@using UserManagement.Entities.Dtos.UserDtos.EntityFramework.ApplicationRoleDto
@model IEnumerable<ApplicationRole>
@{
    ViewBag.Title = "Role List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
        <p>
            <a href="~/Role/Create" class="btn btn-outline-primary btn-sm">+ Add A New Role</a>
        </p>
        <table class="table table-hover">
            <tr>
                <th>Role Name</th>
                <th>Description</th>
                <th>Users</th>
                <th>Created At</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    @if (item.Description != null)
                    {
                        <td>@item.Description</td>
                    }
                    else
                    {
                        <td>-</td>
                    }
                    <td>@item.Users.Count()</td>
                    @if (item.CreatedDate != null)
                    {
                        <td>@item.CreatedDate.ToShortDateString()</td>
                    }
                    else
                    {
                        <td>-</td>
                    }
                    <td>
                        <a href="~/Role/Detail/@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                        <a href="~/Role/Edit/@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                        <a href="~/Role/Delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
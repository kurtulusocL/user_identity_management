@model IEnumerable<UserManagement.Entities.Concrete.Category>
@{
    ViewBag.Title = "Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
        <p>
            <a href="~/Category/Create" class="btn btn-outline-primary btn-sm">+ Add A New Category</a>
        </p>
        <table class="table table-hover">
            <tr>
                <th>Category Name</th>
                <th>Products</th>
                <th>Created At</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Products.Count()</td>
                    <td>@item.CreatedDate.ToShortDateString()</td>
                    <td>
                        <a href="~/Category/Edit/@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                        <a href="~/Category/Delete/@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>